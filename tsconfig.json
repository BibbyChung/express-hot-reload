{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "CommonJS",
    "target": "ES2015",

    "moduleResolution": "Node",
    "declaration": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "diagnostics": true,
    "removeComments": true,
    "skipLibCheck": true
  },
  "exclude": [
    "./node_modules"
  ],
  "include": [
    "./src/**/*.ts",
  ]
}
